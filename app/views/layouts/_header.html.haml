- if user_signed_in?
  %header
    %h1.small-logo
      %a{:href =>"/", :title =>"Bennett - Go to dashboard"}
        %span.hide Bennett
    %ul.nav.nav-pills
      - if can? :manage, User
        %li= link_to 'Admins', users_path
      - if can? :manage, Resque
        %li= link_to 'Queues', '/resque', :target => :_blank
      - if user_signed_in?
        %li= link_to 'Log out', destroy_user_session_path, :method => :delete
- else
  %header
    %h1.logo
      %a{:href =>"/", :title =>"Bennett - Go to homepage"}
        %span.hide Bennett
